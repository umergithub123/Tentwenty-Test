{{ 'featured-slider.css' | asset_url | stylesheet_tag }}
<style>
  .featured-slider {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media (max-width: 767px) {
    .featured-slider {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
</style>

<section class="featured-slider">
  <div class="featured-slider__container">
    {% if section.settings.heading != blank %}
      <h2 class="featured-slider__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="featured-slider__subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="featured-slider__swiper swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="featured-slider__slide swiper-slide">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '720x' }}" alt="{{ block.settings.heading }}" class="featured-slider__image">
            {% endif %}
            
            <div class="slider-content">
              {% if block.settings.heading != blank %}
                <h3 class="featured-slider__slide-heading slider-heading">{{ block.settings.heading }}</h3>
              {% endif %}
              {% if block.settings.subheading != blank %}
                <p class="featured-slider__slide-subheading slider-subtitle">{{ block.settings.subheading }}</p>
              {% endif %}
            </div>  
          </div>
        {% endfor %}
      </div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {

    const sliderSection = document.querySelector('.featured-slider');
    const slides = document.querySelectorAll('.featured-slider__swiper .swiper-slide');

    function animateSlide(slide) {
      const heading = slide.querySelector('.slider-heading');
      const subtitle = slide.querySelector('.slider-subtitle');

      if (heading) heading.classList.add('animate');
      if (subtitle) subtitle.classList.add('animate');
    }

    function resetSlide(slide) {
      const heading = slide.querySelector('.slider-heading');
      const subtitle = slide.querySelector('.slider-subtitle');

      if (heading) heading.classList.remove('animate');
      if (subtitle) subtitle.classList.remove('animate');
    }

    var swiper = new Swiper(".featured-slider__swiper", {
      effect: "coverflow",
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: 1.5,
      initialSlide: 1.5,
      coverflowEffect: {
        rotate: 50,
        stretch: 0,
        depth: 100,
        modifier: 1,
        slideShadows: true,
        spaceBetween: 65,
      },
      breakpoints: {
        767: {
          slidesPerView: 3,
        }
      },
      on: {
        init: function () {
          animateSlide(this.slides[this.activeIndex]);
        },
        slideChangeTransitionStart: function () {
          this.slides.forEach(resetSlide);
        },
        slideChangeTransitionEnd: function () {
          animateSlide(this.slides[this.activeIndex]);
        },
      },
    });

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            animateSlide(swiper.slides[swiper.activeIndex]);
            observer.disconnect(); // fire once only
          }
        });
      },
      {
        root: null,
        threshold: 0,
        rootMargin: '0px 0px -40% 0px'
      }
    );    
    
    observer.observe(sliderSection);
  });
  
</script>  
